@model RegisterViewModel
@{
    ViewData["Title"] = "Student Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="shadow-lg rounded-4 overflow-hidden" style="background: rgba(255,255,255,0.9); backdrop-filter: blur(10px);">
                <div class="p-4 p-md-5">
                    <!-- Form Header -->
                    <div class="text-center mb-4">
                        <h2 class="fw-bold text-primary">
                            <i class="fas fa-graduation-cap me-2"></i>Student Registration
                        </h2>
                        <p class="text-muted small">
                            Fill in the details below to create a new student account
                        </p>
                    </div>

                    <form asp-action="RegisterStudent" asp-controller="Account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Hidden role -->
                        <input asp-for="Role" type="hidden" value="Trainee" />

                        <!-- User Info -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FullName" class="form-label small fw-semibold">
                                    <i class="fas fa-user me-1"></i>Full Name *
                                </label>
                                <input asp-for="FullName" class="form-control rounded-pill" placeholder="Enter full name" />
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label small fw-semibold">
                                    <i class="fas fa-envelope me-1"></i>Email Address *
                                </label>
                                <input asp-for="Email" class="form-control rounded-pill" placeholder="Enter email address" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Credentials -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Password" class="form-label small fw-semibold">
                                    <i class="fas fa-lock me-1"></i>Password *
                                </label>
                                <input asp-for="Password" class="form-control rounded-pill" placeholder="Enter password" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Minimum 6 characters, upper & lowercase, and digits
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmPassword" class="form-label small fw-semibold">
                                    <i class="fas fa-lock me-1"></i>Confirm Password *
                                </label>
                                <input asp-for="ConfirmPassword" class="form-control rounded-pill" placeholder="Confirm password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary rounded-pill">
                                <i class="fas fa-arrow-left me-2"></i>Back
                            </a>
                            <button type="submit" class="btn btn-primary rounded-pill px-4">
                                <i class="fas fa-user-plus me-2"></i>Create Account
                            </button>
                        </div>
                    </form>
                </div>
                <div class="bg-light text-center py-3">
                    <small class="text-muted">
                        Already have an account?
                        <a href="@Url.Action("Login", "Account")" class="fw-bold text-decoration-none">
                            <i class="fas fa-sign-in-alt me-1"></i>Login here
                        </a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}