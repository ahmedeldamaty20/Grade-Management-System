@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="shadow-lg rounded-4 overflow-hidden" style="background: rgba(255,255,255,0.9); backdrop-filter: blur(10px);">
                <div class="p-4 p-md-5">
                    <!-- Form Header -->
                    <div class="text-center mb-4">
                        <h2 class="fw-bold text-primary">
                            <i class="fas fa-key me-2"></i>Change Password
                        </h2>
                        <p class="text-muted small">
                            Update your account password
                        </p>
                    </div>

                    <form asp-action="ChangePassword" asp-controller="Account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="CurrentPassword" class="form-label small fw-semibold">
                                    <i class="fas fa-lock me-1"></i>Current Password *
                                </label>
                                <input asp-for="CurrentPassword" class="form-control rounded-pill" placeholder="Enter current password" />
                                <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="NewPassword" class="form-label small fw-semibold">
                                    <i class="fas fa-key me-1"></i>New Password *
                                </label>
                                <input asp-for="NewPassword" class="form-control rounded-pill" placeholder="Enter new password" />
                                <span asp-validation-for="NewPassword" class="text-danger small"></span>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Minimum 6 characters, upper & lowercase, and digits
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmPassword" class="form-label small fw-semibold">
                                    <i class="fas fa-key me-1"></i>Confirm New Password *
                                </label>
                                <input asp-for="ConfirmPassword" class="form-control rounded-pill" placeholder="Confirm new password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("Profile", "Account")" class="btn btn-outline-secondary rounded-pill">
                                <i class="fas fa-arrow-left me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary rounded-pill px-4">
                                <i class="fas fa-key me-2"></i>Update Password
                            </button>
                        </div>
                    </form>
                </div>
                <div class="bg-light text-center py-3">
                    <small class="text-muted">
                        You will remain logged in after changing your password
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}