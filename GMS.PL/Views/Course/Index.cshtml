@model IEnumerable<GMS.DAL.Models.Course>
@{
    ViewData["Title"] = "Courses";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string currentCategory = Context.Request.Query["cat"];
}

<div class="d-flex justify-content-between align-items-center mb-4 animate-fade-in-up">
    <h2><i class="fas fa-book me-2"></i>Courses</h2>
    @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
    {
        <a asp-action="Create" class="btn btn-gradient-primary shadow-enhanced" style="background-color:#6d667a91;">
            <i class="fas fa-plus me-1"></i> <span style="color:white;">Add Course</span>
        </a>
    }
</div>

<form method="get" class="row g-3 mb-4 animate-fade-in-up align-items-end">
    <div class="col-md-4">
        <label for="search" class="form-label">Search</label>
        <input type="text" id="search" name="search" value="@ViewBag.Search" class="form-control bg-light-subtle" placeholder="Search courses..." />
    </div>

    <div class="col-md-3">
        <label for="category" class="form-label">Categories</label>
        <select id="category" name="category" asp-items="@ViewBag.Categories" class="form-select bg-light-subtle" onchange="this.form.submit()">
            <option value="All"> All</option>
        </select>
    </div>

    <div class="col-md-3">
        <label for="PageSize" class="form-label">Page size</label>
        <select id="PageSize" name="PageSize" class="form-select bg-light-subtle" asp-items="@ViewBag.pageSizes" onchange="this.form.submit()">
        </select>
    </div>

    <div class="col-md-2 d-flex">
        <button type="submit" class="btn btn-gradient-dark shadow-enhanced w-100" style="background-color:#6d667a91;">
            <i class="fas fa-search me-1"></i> <span style="color:white;">Search</span>
        </button>
    </div>
</form>

<table class="table table-striped table-hover animate-fade-in-up shadow-sm">
    <thead class="bg-gradient-primary " style="color:#6a28ea;">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Category</th>
            <th>Instructor</th>
            <th>Sessions</th>
            @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="6" class="text-center">No courses found.</td>
            </tr>
        }
        else
        {
            int index = 1 + ((ViewBag.PageNumber - 1) * ViewBag.PageSize);
            foreach (var course in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@course.Name</td>
                    <td>@course.Category</td>
                    <td>@(course.Instructor?.FullName ?? "N/A")</td>
                    <td>@course.Sessions.Count</td>
                    <td>
                        @if(User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                        {
                            <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-sm btn-gradient-warning shadow-enhanced">
                                <i class="fas fa-edit me-1"></i> Edit
                            </a>
                        }
                    </td>
                    <td>
                        @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                        { 
                            <form asp-action="Delete" asp-route-id="@course.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this course?');" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-gradient-danger shadow-enhanced">
                                <i class="fas fa-trash-alt me-1"></i> Delete
                               </button>
                            </form>
                        }
                    </td>
                </tr>
                index++;
            }
        }
    </tbody>
</table>

<nav class="animate-fade-in-up">
    <ul class="pagination justify-content-center">
        <!-- Previous Button -->
        <li class="page-item @(ViewBag.PageNumber <= 1 ? "disabled" : "")">
            <a class="page-link"
               href="@Url.Action("Index", new { pageNumber = ViewBag.PageNumber - 1, pageSize = ViewBag.PageSize, search = ViewBag.Search, category = ViewBag.Category })"
               tabindex="-1">
                Previous
            </a>
        </li>

        <!-- Page Numbers -->
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(ViewBag.PageNumber == i ? "active" : "")">
                <a class="page-link"
                   href="@Url.Action("Index", new { pageNumber = i, pageSize = ViewBag.PageSize, search = ViewBag.Search, category = ViewBag.Category })">
                    @i
                </a>
            </li>
        }

        <!-- Next Button -->
        <li class="page-item @(ViewBag.PageNumber >= ViewBag.TotalPages ? "disabled" : "")">
            <a class="page-link"
               href="@Url.Action("Index", new { pageNumber = ViewBag.PageNumber + 1, pageSize = ViewBag.PageSize, search = ViewBag.Search, category = ViewBag.Category })">
                Next
            </a>
        </li>
    </ul>
</nav>
