@model Grade

@{
  ViewData["Title"] = "Delete Grade";
}

<h2>Delete Grade</h2>

<h3>Are you sure you want to delete this grade?</h3>
<div>
  <hr />
  <dl class="row">
    <dt class="col-sm-2">
      Trainee
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Trainee.FullName)
    </dd>
    <dt class="col-sm-2">
      Course
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Session.Course.Name)
    </dd>
    <dt class="col-sm-2">
      Session Dates
    </dt>
    <dd class="col-sm-10">
      @Model.Session.StartDate.ToString("MM/dd/yyyy") - @Model.Session.EndDate.ToString("MM/dd/yyyy")
    </dd>
    <dt class="col-sm-2">
      Grade Value
    </dt>
    <dd class="col-sm-10">
      <span class="badge badge-@(Model.Value >= 90 ? "success" : Model.Value >= 70 ? "warning" : "danger") badge-lg">
        @Html.DisplayFor(model => model.Value)%
      </span>
    </dd>
  </dl>

  <form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
  </form>
</div>
