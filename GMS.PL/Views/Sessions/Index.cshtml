@model IEnumerable<GMS.DAL.Models.Session>
@{
    ViewData["Title"] = "Sessions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4 animate-fade-in-up">
    <h2><i class="fas fa-calendar-alt me-2"></i>Sessions</h2>
    @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
    {
        <a asp-action="Create" class="btn btn-gradient-primary shadow-enhanced" style="background-color:#6d667a91;">
            <i class="fas fa-plus me-1"></i> <span style="color:white;">Add Session</span>
        </a>
    }
</div>

<form method="get" class="row g-3 mb-4 animate-fade-in-up align-items-end">
    <div class="col-md-4">
        <label for="search" class="form-label">Search</label>
        <input type="text" id="search" name="search" value="@ViewBag.Search"
               class="form-control bg-light-subtle" placeholder="Search by course name..." />
    </div>

    <div class="col-md-3">
        <label for="PageSize" class="form-label">Page size</label>
        <select id="PageSize" name="PageSize" class="form-select bg-light-subtle"
                asp-items="@ViewBag.PageSizes" onchange="this.form.submit()">
        </select>
    </div>

    <div class="col-md-2 d-flex">
        <button type="submit" class="btn btn-gradient-dark shadow-enhanced w-100" style="background-color:#6d667a91;">
            <i class="fas fa-search me-1"></i> <span style="color:white;">Search</span>
        </button>
    </div>
</form>

<table class="table table-striped table-hover animate-fade-in-up shadow-sm">
    <thead class="bg-gradient-primary" style="color:#6a28ea;">
        <tr>
            <th>#</th>
            <th>Course</th>
            <th>Instructor</th>
            <th>Start Date</th>
            <th>End Date</th>
            @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="6" class="text-center">No sessions found.</td>
            </tr>
        }
        else
        {
            int index = 1 + ((ViewBag.PageNumber - 1) * ViewBag.PageSize);
            foreach (var session in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@session.Course?.Name</td>
                    <td>@(session.Course?.Instructor?.FullName ?? "N/A")</td>
                    <td>@session.StartDate.ToString("yyyy-MM-dd")</td>
                    <td>@session.EndDate.ToString("yyyy-MM-dd")</td>
                    @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                    {
                        <td>
                            <a asp-action="Edit" asp-route-id="@session.Id" class="btn btn-sm btn-gradient-warning shadow-enhanced">
                                <i class="fas fa-edit me-1"></i> Edit
                            </a>
                            <form asp-action="Delete" asp-route-id="@session.Id" method="post"
                                  onsubmit="return confirm('Are you sure you want to delete this session?');"
                                  class="d-inline">
                                <button type="submit" class="btn btn-sm btn-gradient-danger shadow-enhanced">
                                    <i class="fas fa-trash-alt me-1"></i> Delete
                                </button>
                            </form>
                        </td>
                    }
                </tr>
                index++;
            }
        }
    </tbody>
</table>

<nav class="animate-fade-in-up">
    <ul class="pagination justify-content-center">
        <!-- Previous Button -->
        <li class="page-item @(ViewBag.PageNumber <= 1 ? "disabled" : "")">
            <a class="page-link"
               href="@Url.Action("Index", new { pageNumber = ViewBag.PageNumber - 1, pageSize = ViewBag.PageSize, search = ViewBag.Search })"
               tabindex="-1">
                Previous
            </a>
        </li>

        <!-- Page Numbers -->
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(ViewBag.PageNumber == i ? "active" : "")">
                <a class="page-link"
                   href="@Url.Action("Index", new { pageNumber = i, pageSize = ViewBag.PageSize, search = ViewBag.Search })">
                    @i
                </a>
            </li>
        }

        <!-- Next Button -->
        <li class="page-item @(ViewBag.PageNumber >= ViewBag.TotalPages ? "disabled" : "")">
            <a class="page-link"
               href="@Url.Action("Index", new { pageNumber = ViewBag.PageNumber + 1, pageSize = ViewBag.PageSize, search = ViewBag.Search })">
                Next
            </a>
        </li>
    </ul>
</nav>
